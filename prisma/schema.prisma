// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("student") // "student" or "staff"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  wellnessEntries WellnessEntry[]
}

model WellnessEntry {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  mood        Int      // 1-10 scale
  stress      Int      // 1-10 scale
  sleep       Float    // hours
  exercise    Boolean
  activities  String?  // JSON string of activities
  notes       String?  // User notes about their day
  
  aiInsights  String?  // AI-generated insights
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
  @@index([createdAt])
}
